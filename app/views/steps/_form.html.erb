<%= form_for @step do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :recipe_id %><br />
    <%= f.number_field :recipe_id %>
  </p>
  <p>
    <%= f.label :number %><br />
    <%= f.number_field :number %>
  </p>
    <p>
    <%= f.label :ingred_names, "Ingredients" %><br />
    <%= f.text_area :ingred_names, :rows => 6 %>
  </p>

  <p>
    <%= f.label :instruction %><br />
    <%= f.text_area :instruction %>
  </p>
  <p><%= f.submit %></p>
<% end %>
