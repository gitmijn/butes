<%= form_for @recipe do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 6 %>
    </p>
  <p>
    <%= f.label :step_names, "Instruction" %><br />
    <%= f.text_area :step_instructions, :rows => 6 %>
  </p>
  <p><%= f.submit %></p>
<% end %>
